<header>
	<ul>
		<li>
			<a href="{{ path('home') }}">Accueil</a>
		</li>
		{% if app.user is null %}
			<li>
				<a href="{{ path('inscription') }}">S'inscrire</a>
			</li>
			<li>
				<a href="{{ path('connexion')}} ">Se connecter</a>
			</li>
		{% endif %}
		{% if app.user %}
			<li>
				<a href="">Gérer les récettes</a>
			</li>
			<li>
				<a href="{{  path('logout') }}">Se déconnecter</a>
			</li>
		{% endif %}
	</ul>
</header>
{# Affichage des messages flash #}
<ul class="listMessage">
	{% for typeOfMessage,message in app.flashes(["success","error"]) %}
		{% for flashMessage in message %}
			<li class="flash-{{typeOfMessage}}">{{flashMessage}}</li>
		{% endfor %}
	{% endfor %}
</ul>
